.listagem-lojas {
    font-size 22px
    overflow hidden
    
    +below(750px){
        margin-bottom 0 !important
        font-size 18px
    }
    +below(450px){
        font-size 18px
    }
    
    li {
        overflow hidden
        column(1/5, $cycle: 5)
        min-height 100px
        
        +below(1050px){
            column(1/3, $cycle: 3)
        }
        +below(750px){
            column(1/2, $cycle: 2)
            min-height 80px
        }
    }
}