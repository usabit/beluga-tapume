.social-media {
    display flex
    justify-content space-between
    align-items flex-end
    
    .first-group {
        display flex
        align-items flex-end
        span {
            line-height 1.2
            font-size 18px
        }
        > * {
            margin-right 10px
        }
    }
    
    .last-group {
        a {
            font-size 30px
            color white
            text-decoration none

            +below(850px){
                font-size 24px
            }
            +below(450px){
                font-size 20px
            }
        }
    }
    
    +below(850px){
        flex-direction column
        align-items center
        margin 60px 0
        .first-group {
            flex-wrap wrap
            align-items center
            width 100%
            margin-bottom 20px
            hr {
                flex 1
            }
            span {
                order: 0
                width 100%
                text-align center
                margin 0 0 20px 0
                br {
                    display none
                }
            }
            > * {
                order 1
                margin 0 10px
            }
        }
    }
}